<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="calculatorBmi.pages.CalculatorPage"
             Title="CalculatorPage">

    <ContentPage.Content>
        <StackLayout Padding="30">
            <Label Text="Your Height[m]"/>
            <Editor x:Name="height" Text="0"  TextChanged="EditorTextChanged"  />

            <Label Text="Your Weight[kg]"/>
            <Editor x:Name="weight" Text="0"  TextChanged="EditorTextChanged"  />

            <Button x:Name="btn" Clicked="ButtonToCalculateResult_Click" BorderColor="Black" Text="Check Result" FontSize="14" MinimumWidthRequest="25" MinimumHeightRequest="50"/>
           
        </StackLayout>
    </ContentPage.Content>
</ContentPage>